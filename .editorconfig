# EditorConfig Configuration file
# https://editorconfig.org

root = true

# General settings, for all files
[*]
# Use space indentation (corresponds to prettier.useTabs = false）
indent_style = space
# Indent size is 2 spaces (corresponds to prettier.tabWidth = 2）
indent_size = 2
# If the editor supports it, set the unified tab width to 2
tab_width = 2

# File encoding (Recommended to be UTF-8, no BOM）
charset = utf-8

# Line endings unified to LF (Linux / macOS style ）
end_of_line = lf

# Trim trailing whitespace
trim_trailing_whitespace = true

# Files must end with a newline
insert_final_newline = true

# Control max line length, recommended to use with editor visual rulers (corresponds to prettier.printWidth = 120）
# This field is not an official standard but is common in EditorConfig extensions
max_line_length = 120

# Note: The following Prettier-specific configs should be kept in .prettierrc or relevant config files
# arrowParens = avoid
# bracketSpacing = true
# jsxBracketSameLine = false
# proseWrap = always
# quoteProps = as-needed
# semi = true
# singleQuote = true
# trailingComma = all

###############################
# Overrides for specific file types
###############################

# Markdown Files usually do not strip trailing whitespace to preserve soft wrap format
[*.md]
trim_trailing_whitespace = false

# JSON Files unified to double quotes, do not follow prettier.singleQuote
[*.json]
indent_style = space
indent_size = 2

# YAML Files also keep double quotes, and typically trailing whitespace is not removed (depending on project needs ）
[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
